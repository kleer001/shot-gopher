{
  "stages": {
    "ingest": {
      "name": "Ingest",
      "displayName": "Ingest Video Frames",
      "description": "Extract frames from video",
      "outputDir": "source/frames",
      "estimatedTimePerFrame": 0.05,
      "required": false,
      "dependencies": [],
      "defaultEnabled": false,
      "requiresComfyUI": false
    },
    "interactive": {
      "name": "Interactive",
      "displayName": "Interactive Roto",
      "description": "Manual point-based roto workflow",
      "outputDir": "roto",
      "estimatedTimePerFrame": 1.0,
      "required": false,
      "dependencies": [],
      "defaultEnabled": false,
      "note": "Use for manual selection instead of automatic roto",
      "requiresComfyUI": true
    },
    "depth": {
      "name": "Depth Maps",
      "displayName": "Generate Depth Maps",
      "description": "Create depth information for each frame",
      "outputDir": "depth",
      "estimatedTimePerFrame": 0.5,
      "required": false,
      "dependencies": [],
      "defaultEnabled": true,
      "requiresComfyUI": true
    },
    "roto": {
      "name": "Roto",
      "displayName": "Roto (Mask Objects)",
      "description": "Detect and mask objects/people",
      "outputDir": "roto",
      "estimatedTimePerFrame": 0.8,
      "required": false,
      "dependencies": [],
      "defaultEnabled": true,
      "hasPrompt": true,
      "promptLabel": "Roto Prompt",
      "promptPlaceholder": "person, car, building...",
      "requiresComfyUI": true
    },
    "mama": {
      "name": "Refine Mattes",
      "displayName": "Refine Person Mattes (VideoMaMa)",
      "description": "Improve quality of person masks",
      "outputDir": "matte",
      "estimatedTimePerFrame": 1.0,
      "required": false,
      "dependencies": ["roto"],
      "defaultEnabled": false,
      "note": "Requires Roto with person masks",
      "requiresComfyUI": false
    },
    "cleanplate": {
      "name": "Clean Plate",
      "displayName": "Clean Plate (Static Camera)",
      "description": "Clean plate via temporal median (static camera)",
      "outputDir": "cleanplate",
      "estimatedTimePerFrame": 0.3,
      "required": false,
      "dependencies": [],
      "defaultEnabled": false,
      "requiresComfyUI": false
    },
    "matchmove_camera": {
      "name": "Camera Tracking",
      "displayName": "Track Camera (COLMAP)",
      "description": "Calculate camera movement",
      "outputDir": "mmcam",
      "estimatedTimePerFrame": 2.0,
      "required": false,
      "dependencies": [],
      "defaultEnabled": false,
      "enables": ["gsir", "mocap"],
      "requiresComfyUI": false
    },
    "gsir": {
      "name": "Materials",
      "displayName": "Reconstruct 3D Scene (GSIR)",
      "description": "Generate 3D gaussian splats",
      "outputDir": "gsir",
      "estimatedTimePerFrame": 1.5,
      "required": false,
      "dependencies": ["matchmove_camera"],
      "defaultEnabled": false,
      "requiresComfyUI": false
    },
    "mocap": {
      "name": "Motion Capture",
      "displayName": "Extract Motion (MoCap)",
      "description": "Capture character movement",
      "outputDir": "mocap",
      "estimatedTimePerFrame": 1.2,
      "required": false,
      "dependencies": ["matchmove_camera"],
      "defaultEnabled": false,
      "requiresComfyUI": false
    }
  },
  "presets": {
    "quick": {
      "name": "Quick Preview",
      "description": "Fast preview with depth and roto",
      "stages": ["depth", "roto"]
    },
    "full": {
      "name": "Full VFX",
      "description": "Complete VFX pipeline without 3D",
      "stages": ["depth", "roto", "cleanplate"]
    }
  },
  "supportedVideoFormats": [
    ".mp4",
    ".mov",
    ".avi",
    ".mkv",
    ".webm",
    ".mxf"
  ],
  "websocket": {
    "pingInterval": 25000,
    "reconnectDelay": 2000,
    "maxReconnectAttempts": 5
  },
  "ui": {
    "maxProjectsDisplayed": 5,
    "maxRecentFiles": 10,
    "progressUpdateInterval": 100
  }
}
